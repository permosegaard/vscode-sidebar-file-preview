{
	"name": "file-preview",
	"displayName": "File Previewer",
	"description": "Preview a file in the sidebar or panel",
	"version": "1.0.0",
	"publisher": "permosegaard",
	"keywords": [
		"preview",
		"sidebar",
		"panel"
	],
	"galleryBanner": {
		"color": "4C4C4C",
		"theme": "dark"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/permosegaard/vscode-sidebar-file-preview.git"
	},
	"bugs": "https://github.com/permosegaard/vscode-sidebar-file-preview/issues",
	"main": "./dist/extension",
	"extensionKind": [
		"ui",
		"workspace"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "preview.previewView",
					"name": "Viewer",
					"contextualTitle": "Viewer"
				}
			]
		},
		"commands": [
			{
				"command": "preview.previewView.edit",
				"title": "Edit (+Create) File",
				"icon": "$(pencil)"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "preview.previewView.edit",
					"when": "view == preview.previewView",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Preview",
			"properties": {
				"preview.previewView.filename": {
					"type": "string",
					"description": "Which file to open by default in viewer",
					"default": "TODO.md"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"dependencies": {
		"@vscode/vsce": "^2.22.0",
		"json5": "^2.1.3",
		"marked": "^4.0.15",
		"oniguruma": "^7.2.1",
		"shiki": "^0.2.5",
		"shiki-themes": "^0.2.5"
	},
	"devDependencies": {
		"@types/json5": "0.0.30",
		"@types/marked": "^4.0.3",
		"@types/node": "^14.11.2",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"@vscode/vsce": "*",
		"eslint": "^7.1.0",
		"ts-loader": "^8.0.4",
		"typescript": "^4.6.4",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.0"
	}
}